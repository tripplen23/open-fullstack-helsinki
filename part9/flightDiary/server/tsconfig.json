{
  "compilerOptions": {
    "target": "ES6", // Tells the compiler which ECMAScript version to use when generating JS.
    "outDir": "./build/", // Where the complied code should be placed.
    "module": "commonjs", // Use the CommonJS module in the compiled code => can use "require" instead of "import" syntax.
    "strict": true, // shorthand for multiple separate options: noImplicitAny, noImplicitThis, alwaysStrict, strictBindCallApply, strictNullChecks, strictFunctionTypes and strictPropertyInitialization. => Guilding our coding style to use the TypeScript features more strictly.
    "noUnusedLocals": true, // Prevent having unused local variables
    "noUnusedParameters": true, // Throw an error if a function has unused parameters
    "noImplicitReturns": true, // Check all code paths in a function to ensure they return a value
    "noFallthroughCasesInSwitch": true, // Ensures that, in a switch case, each case ends either with a return or a break statement
    "esModuleInterop": true, // Allows interoperability between CommonJS and ES modules
    "resolveJsonModule": true
  }
}
